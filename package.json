{
    "name": "kok-backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/apps/app/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/app/test/jest-e2e.json",
        "migration:create": "knex migrate:make --knexfile=database/knex.ts",
        "migration:up": "knex migrate:up --knexfile=database/knex.ts",
        "migration:down": "knex migrate:down --knexfile=database/knex.ts",
        "migration:run": "knex migrate:latest --knexfile=database/knex.ts",
        "migration:rollback": "knex migrate:rollback --knexfile=database/knex.ts",
        "migration:refresh": "knex migrate:rollback --knexfile=database/knex.ts && knex migrate:latest --knexfile=database/knex.ts",
        "docs:build": "npx swagger-cli bundle -o build/docs/openapi.yaml -r -t yaml swagger/api.yaml"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.3.1",
        "@nestjs/core": "^9.0.0",
        "@nestjs/jwt": "^10.0.2",
        "@nestjs/passport": "^9.0.3",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/schedule": "^2.2.0",
        "@nestjs/throttler": "^4.0.0",
        "@nestjs/typeorm": "^9.0.1",
        "cookie-parser": "^1.4.6",
        "decimal.js": "^10.4.3",
        "dotenv": "^16.0.3",
        "ethereumjs-util": "^7.1.5",
        "joi": "^17.8.1",
        "knex": "^2.4.2",
        "mysql2": "^3.1.2",
        "nestjs-i18n": "^10.2.6",
        "passport-jwt": "^4.0.1",
        "pluralize": "^8.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "typeorm": "^0.3.12",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@apidevtools/swagger-cli": "^4.0.4",
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/cron": "^2.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "28.1.8",
        "@types/node": "^16.0.0",
        "@types/passport-jwt": "^3.0.8",
        "@types/pluralize": "^0.0.29",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "28.1.3",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "28.0.8",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.0",
        "typescript": "^4.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^@app/core(|/.*)$": "<rootDir>/libs/core/src/$1"
        }
    }
}
